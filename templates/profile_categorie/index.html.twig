{% extends 'base.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
	<h1>Toutes les categories</h1>


	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Article_alphab</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for categorie in categories %}
				<tr>
					<td>{{ categorie.id }}</td>
					<td>{{ categorie.articleAlphab }}</td>
					<td>
						<a href="{{ path('app_profile_categorie_show', {'id': categorie.id}) }}">Afficher</a>
						<a href="{{ path('app_profile_categorie_edit', {'id': categorie.id}) }}">Modifier</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Pas de résultat</td>

				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_profile_categorie_new') }}">Créer une nouvelle catégorie</a>

{% endblock %}
